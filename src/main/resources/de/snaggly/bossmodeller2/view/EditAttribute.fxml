   <HBox alignment="CENTER_LEFT" spacing="8.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
         <Button fx:id="upBtn" mnemonicParsing="false" text="ðŸ¡¹" HBox.hgrow="NEVER">
            <font>
               <Font name="System Bold" size="13.0" />
            </font>
         </Button>
         <Button fx:id="downBtn" mnemonicParsing="false" text="ðŸ¡»" HBox.hgrow="NEVER" />
